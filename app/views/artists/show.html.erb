<h1>Artist</h1>
<div class="ui card">
  <div class="image">
    <img src="https://robohash.org/<%= @artist.avatar %>?set=set4" />
  </div>
  <div class="content">
    <p class="header">
      <%= @artist.name %>
    </p>
  </div>
  <div class="extra content">
    <%= link_to 'New Song' new_artist_song_path(@artist), class: "ui button blue" %>
    <%= link_to 'Edit', edit_artist_path(@artist) %> |
    <%= link_to 'Back', artists_path %>
  </div>
</div>
