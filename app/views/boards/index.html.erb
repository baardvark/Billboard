<h1 class="ui header">Billboards</h1>
<%= link_to 'New Billboard', new_board_path %>
<div class="ui divider"></div>

<div class="ui grid">
  <% @boards.each do |board| %>
    <div class="sixteen wide mobile eight wide tablet four wide computer column">
      <div class="ui card">
        <div class="image">
  
        </div>
        <div class="content">
          <%= link_to "#{board.title}", board_path(board), class: "header" %>
        </div>
        <div class="extra content">
          <div class="ui two buttons">
            <div class="basic green button">
              <%= link_to 'Edit', edit_board_path(board) %>
            </div>
            <div class="basic red button">
              <%= link_to 'Delete', board, method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>